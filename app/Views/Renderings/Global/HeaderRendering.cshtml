@using Landmark.Classes
@using Landmark.Helper
@model RenderingModel
<header class="site-header">
    <!-- desktop -->
    <div class="container hidden-sm  hidden-xs">
        <div class="language ">
            <a href="@LandmarkHelper.GetUrlByLanguage(Model.PageItem, "")" class="lang-cn">@Html.Sitecore().Rendering(ItemGuids.GlossaryRenderingViewGuid, new {DataSource = ItemGuids.TraditionalChineseItemGuid})</a> |
            <a href="@LandmarkHelper.GetUrlByLanguage(Model.PageItem, "")" class="lang-cn">@Html.Sitecore().Rendering(ItemGuids.GlossaryRenderingViewGuid, new {DataSource = ItemGuids.SimplifiedChineseItemGuid})</a>
            <div class="sb-search">
                <form action="/en/search">
                    <input type="search" id="search" name="search" placeholder="@Html.Sitecore().Field("Glossary Value", ItemGuids.SearchPlaceHolderItem)" class="sb-search-input form-control">
                    <input class="sb-search-submit" type="submit" value="">
                    <span class="icomoon-search"></span>
                </form>
            </div>
        </div>
        <nav class="clearfix">
            <h1>
                <a href="@Sitecore.Links.LinkManager.GetItemUrl(ItemGuids.LandmarkHomeItem)">
                    @Html.Sitecore().Field("Landmark Logo Image",ItemGuids.LandmarkConfigItem, new {@class="img-logo"})
                    @Html.Sitecore().Field("Landmark Logo",ItemGuids.LandmarkConfigItem, new {@class="responsive-logo"})
                </a>
            </h1>
        </nav>
    </div>

    <!-- mobile -->


</header>
