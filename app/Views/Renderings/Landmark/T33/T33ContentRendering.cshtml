@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Landmark.Models
@model RenderingModel

<div id="gd-carousel-mainimage-single" class="carousel slide gd-carousel-info gd-mainimage gd-mainimage-single">
    <div class="carousel-inner">
        <div class="item active">
            <div class="carousel-image" data-bgsrc="@Html.Sitecore().ImageFieldSrc("Cover Image", Sitecore.Context.Item)"></div>
            <div class="carousel-caption">
                <div class="carousel-caption-inner">
                    <div class="gd-carousel-detail">
                        <div class="gd-mainimage-brief">
                            <h1>@Html.Sitecore().Field("Cover Title")</h1>
                            <p>@Html.Sitecore().Field("Cover Description")</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container">
    <div class="gd-brief">
        <div class="gd-brief-heading">
            <h2>@Html.Sitecore().Field("Address Label")</h2>
        </div>
        <div class="gd-brief-body gd-brief-center">
            <p>
                @Html.Sitecore().Field("Address Text")
            </p>
            <a href="/en/t35.html"><button class="gd-button gd-button-white" type="button">@Html.Sitecore().Field("Button Text")</button></a>
        </div>
    </div>
    <div class="gd-location-map">
        <iframe src="t33-iframe.html" frameborder="0"></iframe>
    </div>
    <div class="gd-brief">
        <div class="gd-brief-heading">
            <h2>4 ICONIC BUILDINGS</h2>
        </div>
        <div class="gd-brief-body gd-brief-center">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <p>
                        As a powerful, luxury retail brand LANDMARK provides a rich diversity of offerings and experiences across the four famed shopping destinations.
                    </p>
                </div>
            </div>
        </div>
    </div>
    <div id="gd-carousel-info" class="carousel slide gd-carousel-info" data-ride="carousel">
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/example1.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail">
                            <h3>LANDMARKATRIUM</h3>
                            <p>Built on the old grounds of Hong Kong Hotel and located in the heart of Central, LANDMARK ATRIUM continues the rich heritage of the land, accompanying the growth and development of Hong Kong since its completion in 1980s.</p>
                            <button class="gd-button gd-button-white" type="button">DISCOVER MORE</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/shopdetail/shopdetail-article-01.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail">
                            <h3>Lorem ipsum dolor</h3>
                            <p>Lorem ipsum dolor sit amet. Necessitatibus dolorum corrupti perferendis, eos iure sit neque tenetur saepe!</p>
                            <button class="gd-button gd-button-white" type="button">DISCOVER MORE</button>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/ourlocation/ourlocation-article-01.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail">
                            <h3>Lorem ipsum dolor</h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Atque eos saepe temporibus architecto magni neque eaque consequatur nesciunt harum laudantium saepe temporibus architecto magni neque eaque!</p>
                            <button class="gd-button gd-button-white" type="button">DISCOVER MORE</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Wrapper for controls -->
        <div class="carousel-footer">
            <div class="gd-carousel-controls clearfix">
                <!-- Controls -->
                <a class="gd-carousel-control" href="#gd-carousel-info" role="button" data-slide="prev">
                    <span class="icomoon-thin-arrow-L" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <!-- Indicators -->
                <ol class="carousel-indicators gd-carousel-control gd-carousel-no">
                    <li data-target="#gd-carousel-info" data-slide-to="0" class="active">1</li>
                    <li data-target="#gd-carousel-info" data-slide-to="1">2</li>
                    <li data-target="#gd-carousel-info" data-slide-to="2">3</li>
                </ol>
                <span class="gd-carousel-control gd-carousel-no">
                    /
                </span>
                <span class="gd-carousel-control gd-carousel-no">
                    3
                </span>
                <a class="gd-carousel-control" href="#gd-carousel-info" role="button" data-slide="next">
                    <span class="icomoon-thin-arrow-R" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>
</div>