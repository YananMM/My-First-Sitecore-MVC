@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Landmark.Models
@model RenderingModel
<div class="gd-offers">
    <h3>@Html.Sitecore().Field("Special Offers Label")</h3>
    <div class="row">
        @{
            var offers = LandmarkHelper.GetItemByTemplate(Sitecore.Context.Item,ItemGuids.T34SpecialOfferObject);
            foreach (var item in offers)
            {
                <div class="col-sm-4">
                    <div class="gd-offers-body">
                        <h4>@Html.Sitecore().Field("Offer Title", item)</h4>
                        <p>@Html.Sitecore().Field("Offer Description", item)</p>
                        <a href="javascript:;" class="gd-link-book">
                            @Html.Sitecore().Field("Offer Link Label", item) <span class="icomoon-chevron-small-right"></span>
                        </a>
                    </div>
                </div>
            }
        }

    </div>
</div>