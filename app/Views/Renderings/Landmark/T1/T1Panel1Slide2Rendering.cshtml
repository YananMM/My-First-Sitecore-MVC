@using Landmark.Helper
@using Sitecore.Links
@model RenderingModel
@{
    string src = LandmarkHelper.GetCallOutImage(Model.Item);
}
<div class="panel-img" data-bg="@src"></div>
<div class="panel-main">
    <div class="panel-text text-box-2">
        <hgroup class="clearfix">
            <h4>@Html.Sitecore().Field("Article Sub Headline", Model.Item)</h4>
            <h2><a href="@LandmarkHelper.TranslateUrl(LinkManager.GetItemUrl(Model.Item))">@Html.Sitecore().Field("Article Headline", Model.Item)</a></h2>
        </hgroup>
    </div>
</div>
