@model RenderingModel


<div class="container">

    @{
        
    }
    <div class="gd-error">
        @{
            Sitecore.Globalization.Language languageEN = Sitecore.Data.Managers.LanguageManager.GetLanguage("en");
            Sitecore.Data.Items.Item itemEN = Sitecore.Context.Database.GetItem(Sitecore.Context.Item.ID, languageEN);
        }
        <h2>@Html.Sitecore().Field("Page Title", itemEN)</h2>
        @Html.Sitecore().Field("Page Content", itemEN)
    </div>

    <div class="gd-error">
        @{
            Sitecore.Globalization.Language languageCN = Sitecore.Data.Managers.LanguageManager.GetLanguage("zh-CN");
            Sitecore.Data.Items.Item itemCN = Sitecore.Context.Database.GetItem(Sitecore.Context.Item.ID, languageCN);
        }
        <h2>@Html.Sitecore().Field("Page Title", itemCN)</h2>
        @Html.Sitecore().Field("Page Content", itemCN)
    </div>
    <div class="gd-error">
        @{
            Sitecore.Globalization.Language languageHK = Sitecore.Data.Managers.LanguageManager.GetLanguage("zh-HK");
            Sitecore.Data.Items.Item itemHK = Sitecore.Context.Database.GetItem(Sitecore.Context.Item.ID, languageHK);
        }
        <h2>@Html.Sitecore().Field("Page Title", itemHK)</h2>
        @Html.Sitecore().Field("Page Content", itemHK)
    </div>

    <div id="gd-carousel-info" class="carousel slide gd-carousel-info" data-ride="carousel">
        <div class="carousel-heading">
            <h3>SEE OUR OFFERS OR EXPLORE LANDMARK</h3>
        </div>
        <!-- Wrapper for slides -->
        <div class="carousel-inner" role="listbox">
            <div class="item active">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/others/error-article-01.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail">
                            <h4>The Landmark Mandarin Oriental is simply one of the best luxury city hotels in the world.</h4>
                            <p>The Landmark Mandarin Oriental is simply one of the best luxury city hotels in the world. Our 113 guestrooms are amongst the largest hotel rooms in Hong Kong and each a masterpiece of contemporary design. We offer a cocoon of discreet serenity, attended by our legendary service. This is a highly exclusive experience in the premier business and fashion location.</p><a href="#" class="gd-button gd-button-white" type="button">DISCOVER MORE</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/experience/experience-image-01.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail">
                            <h4>The iconic Mandarin Oriental, Hong Kong is the epitome of contemporary luxury combined with Oriental heritage.</h4>
                            <p>Having delighted guests with its award-winning service and impressive facilities for nearly 50 years, it is the much loved address for those seeking an exclusive sanctuary in the heart of this exciting metropolis.</p>
                            <a href="#" class="gd-button gd-button-white" type="button">DISCOVER MORE</a>
                        </div>
                    </div>
                </div>
            </div>
            <div class="item">
                <div class="carousel-image" data-bgsrc="../files/landmark/images/artpiece/artpiece-pic-03.jpg"></div>
                <div class="carousel-caption">
                    <div class="carousel-caption-inner">
                        <div class="gd-carousel-detail ">
                            <h4>Lorem ipsum dolor</h4>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Atque eos saepe temporibus architecto magni neque eaque consequatur nesciunt harum laudantium saepe temporibus architecto magni neque eaque!</p>
                            <a href="#" class="gd-button gd-button-white" type="button">DISCOVER MORE</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- Wrapper for controls -->
        <div class="carousel-footer">
            <div class="gd-carousel-controls clearfix">
                <!-- Controls -->
                <a class="gd-carousel-control" href="#gd-carousel-info" role="button" data-slide="prev">
                    <span class="icomoon-thin-arrow-L" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <!-- Indicators -->
                <ol class="carousel-indicators gd-carousel-control gd-carousel-no">
                    <li data-target="#gd-carousel-info" data-slide-to="0" class="active">1</li>
                    <li data-target="#gd-carousel-info" data-slide-to="1">2</li>
                    <li data-target="#gd-carousel-info" data-slide-to="2">3</li>
                </ol>
                <span class="gd-carousel-control gd-carousel-no">
                        /
                    </span>
                <span class="gd-carousel-control gd-carousel-no">
                        3
                    </span>
                <a class="gd-carousel-control" href="#gd-carousel-info" role="button" data-slide="next">
                    <span class="icomoon-thin-arrow-R" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
    </div>

</div>
