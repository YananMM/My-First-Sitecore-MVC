@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Landmark.Models
@model RenderingModel
@{
    var tagsTrees = LandmarkHelper.GetTagsTree();
}
<div id="gd-carousel-mainimage-single" class="carousel slide gd-carousel-info gd-mainimage gd-mainimage-single">
    <div class="carousel-inner">
        <div class="item active">
            <div class="carousel-image" data-bgsrc="@Html.Sitecore().ImageFieldSrc("Cover Image", Sitecore.Context.Item)"></div>
            <div class="carousel-caption">
                <div class="carousel-caption-inner">
                    <div class="gd-carousel-detail">
                        <div class="gd-mainimage-brief2">
                            <h2>@Html.Sitecore().Field("Cover Title")</h2>
                            @Html.Sitecore().Field("Cover Content")
                            <div class="table-responsive gd-mainimage-table">
                                <table>
                                    <tbody>
                                        <tr>
                                            <th>
                                                @{
                                                    var phoneValue = SitecoreItems.PhoneItem.Fields["Glossary Value"].ToString();
                                                    if (!string.IsNullOrEmpty(phoneValue))
                                                    {
                                                        @Html.Sitecore().Field("Glossary Value", SitecoreItems.PhoneItem)
                                                    }
                                                }
                                            </th>
                                            <td>@Html.Sitecore().Field("Cover Phone")</td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @{
                                                    var websiteValue = SitecoreItems.WebsiteItem.Fields["Glossary Value"].ToString();
                                                    if (!string.IsNullOrEmpty(websiteValue))
                                                    {
                                                        @Html.Sitecore().Field("Glossary Value", SitecoreItems.WebsiteItem)
                                                    }
                                                }
                                            </th>
                                            <td>
                                                <a href="@Html.Sitecore().Field("Cover Email")">@Html.Sitecore().Field("Cover Email")</a>
                                            </td>
                                        </tr>
                                        <tr>
                                            <th>
                                                @{
                                                    var addressValue = SitecoreItems.AddressItem.Fields["Glossary Value"].ToString();
                                                    if (!string.IsNullOrEmpty(addressValue))
                                                    {
                                                        @Html.Sitecore().Field("Glossary Value", SitecoreItems.AddressItem)
                                                    }
                                                }
                                            </th>
                                            <td>
                                                @Html.Sitecore().Field("Cover Address")
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <div class="table-responsive gd-tg-table">
                                <table>
                                    <tbody>
                                        <tr>
                                            <th><span class="icomoon-price-tag"></span> @Html.Sitecore().Field("Glossary Value", SitecoreItems.TagsItem)</th>
                                            <td>
                                                @foreach (var item in tagsTrees)
                                                {<a href="javascript:;">
                                                    @item.CurrentItem["Tag Name"].ToUpper() -
                                                </a>
                                                    int i = 1;
                                                    foreach (var it in item.Children)
                                                    {
                                                        <a href="javascript:;">@it.CurrentItem["Tag Name"].ToUpper()</a>
                                                        if (i != item.Children.Count)
                                                        {<text>,</text>
                                                        }
                                                        i++;
                                                    }
                                                    <br />
                                                }
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
<div class="container">
    <div class="gd-brief">
        <div class="gd-brief-heading">
            <h3>@Html.Sitecore().Field("Content Title")</h3>
        </div>
        <div class="gd-brief-body gd-col-2">
            @Html.Sitecore().Field("Content Description")
        </div>
    </div>
    <div class="gd-location-map" data-lat="-37.820665" data-lng="144.943051">
        <iframe src="/files/landmark/iframes/map-simple-iframe.html" frameborder="0"></iframe>
    </div>
    @Html.Sitecore().Placeholder("more-attrations")
</div>