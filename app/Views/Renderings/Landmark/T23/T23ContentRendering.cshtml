@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Landmark.Models
@model RenderingModel
@{
    var currentItem = Sitecore.Context.Item;
    MagazineHelper helper = new MagazineHelper();
}
@if (currentItem.TemplateID.ToString() == ItemGuids.T23PageABTemplate)
{
    var setting = helper.GetStorySetting(currentItem);
    if (setting == StorySetting.StyleA)
    {
        @Html.Sitecore().Placeholder("style-a")
    }
    else if (setting == StorySetting.StyleB)
    {
        @Html.Sitecore().Placeholder("style-b")
    }
}
else if (currentItem.TemplateID.ToString() == ItemGuids.T23PageCTemplate)
{
    @Html.Sitecore().Placeholder("style-cd")
}

