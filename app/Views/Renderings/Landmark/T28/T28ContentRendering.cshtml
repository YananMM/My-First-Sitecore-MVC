@model RenderingModel

<div class="container">
    <div class="gd-pagetitle">
        <div class="gd-pagetitle-heading">
            <h1>@Html.Sitecore().Field("Page Title")</h1>
        </div>
	@if (Html.Sitecore().Field("Legal Title").ToString() != "" && Html.Sitecore().Field("Privacy Title").ToString() != "" && Html.Sitecore().Field("Terms Title").ToString() != "") {
        <div class="gd-pagetitle-menu  hidden-xs">
            <a href="#" class="active">@Html.Sitecore().Field("Legal Title").ToString().ToUpper()</a> <span class="gd-pagetitle-menu-gap">|</span>  <a href="#policy">@Html.Sitecore().Field("Privacy Title").ToString().ToUpper()</a><span class="gd-pagetitle-menu-gap">|</span>  <a href="#terms">@Html.Sitecore().Field("Terms Title").ToString().ToUpper()</a>
        </div>
        <div class="gd-controls-m visible-xs">
            <select class="form-control">
                <option value="#">@Html.Sitecore().Field("Legal Title").ToString().ToUpper()</option>
                <option value="#policy">@Html.Sitecore().Field("Privacy Title").ToString().ToUpper()</option>
                <option value="#terms">@Html.Sitecore().Field("Terms Title").ToString().ToUpper()</option>
            </select>
        </div>
	}
    </div>
</div>
<div class="container">
@if (Html.Sitecore().Field("Legal Content").ToString() != "") {
    <div class="gd-brief">
        <div class="gd-brief-heading  gd-brief-heading-left">
            <h3>@Html.Sitecore().Field("Legal Title")</h3>
        </div>
        <div class="gd-brief-body">
            @Html.Sitecore().Field("Legal Content")
        </div>
    </div>
}
@if (Html.Sitecore().Field("Privacy Content").ToString() != "") {
    <div class="gd-brief" id="policy">
        <div class="gd-brief-heading  gd-brief-heading-left">
            <h3>@Html.Sitecore().Field("Privacy Title")</h3>
        </div>
        <div class="gd-brief-body">
            @Html.Sitecore().Field("Privacy Content")
        </div>
    </div>
}
@if (Html.Sitecore().Field("Terms Content").ToString() != "") {
    <div class="gd-brief" id="terms">
	@if (Html.Sitecore().Field("Terms Title").ToString() != "") {
        <div class="gd-brief-heading  gd-brief-heading-left">
            <h3>@Html.Sitecore().Field("Terms Title")</h3>
        </div>
	}
        <div class="gd-brief-body">
            @Html.Sitecore().Field("Terms Content")
        </div>
    </div>
}
</div>
