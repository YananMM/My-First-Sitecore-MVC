@using Landmark.Classes
@using Sitecore.Data.Items
@model RenderingModel

@{
    var homePage = ItemGuids.LandmarkHomeItem;
    var currentPage = Sitecore.Context.Item;
    List<Item> items = new List<Item>();
    List<Item> breadcrumbs = new List<Item>();
    while (currentPage.ID != homePage.ID)
    {
        items.Add(currentPage.Parent);
        currentPage = currentPage.Parent;
    }
    items.Reverse();
    if (items.Count >= 3)
    {
        for (int i = 0; i < 3; i++)
        {
            breadcrumbs.Add(items[i]);
        }
    }
    else
    {
        for (int i = 0; i < items.Count; i++)
        {
            breadcrumbs.Add(items[i]);
        }
    }


}

<div class="col-xs-12">
    <ol class="breadcrumb">
        @foreach (var item in breadcrumbs)
        {
            <li>
                <a href="@Sitecore.Links.LinkManager.GetItemUrl(item)">
                    @if (item.ID == homePage.ID)
                    {
                        <text>Home</text>
                    }
                    else
                    {
                        <text>@item["Page Title"]</text>
                    }
                    <span class="icomoon-chevron-small-right"></span>
                </a>
            </li>

        }
    </ol>
</div>
