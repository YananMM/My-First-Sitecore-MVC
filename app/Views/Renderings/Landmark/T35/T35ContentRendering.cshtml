@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Landmark.Models
@model RenderingModel
@{
    var currentItem = Sitecore.Context.Item;
    var t35GetDirectionPage = Sitecore.Context.Database.GetItem(ItemGuids.T35GetDirectionPage);
    var t35SurroundingPage = Sitecore.Context.Database.GetItem(ItemGuids.T35SurroundingPage);
}
<div class="container">
    <div class="gd-pagetitle">
        <div class="gd-pagetitle-heading">
            <h1>@Html.Sitecore().Field("Page Title").ToString().ToUpper()</h1>
        </div>

        <div id="gd-map-switcher" class="gd-pagetitle-menu hidden-xs">
            <a data-iframe="@LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(t35GetDirectionPage))" href="javascript:;" class="active">@t35GetDirectionPage.Fields["Page Title"].ToString().ToUpper()</a>
            <span class="gd-pagetitle-menu-gap">|</span>
            <a data-iframe="@LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(t35SurroundingPage))" href="javascript:;">@t35SurroundingPage.Fields["Page Title"].ToString().ToUpper()</a>
        </div>

        <div id="gd-map-switcher-m" class="gd-controls-m visible-xs">
            <select name="" id="" class="form-control visible-xs">
                <option value="@LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Database.GetItem(ItemGuids.T35GetDirectionPage)))">@t35GetDirectionPage.Fields["Page Title"].ToString().ToUpper()</option>
                <option value="@LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Database.GetItem(ItemGuids.T35SurroundingPage)))" @if (currentItem.ID.ToString() == ItemGuids.T35SurroundingPage) { <text>
                        selected="selected"
                        </text>     }>
                    @t35SurroundingPage.Fields["Page Title"].ToString().ToUpper()
                </option>
            </select>
        </div>

    </div>
</div>
<iframe id="gd-map-container" src="@LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(Sitecore.Context.Database.GetItem(ItemGuids.T35GetDirectionPage)))" frameborder="0"></iframe>