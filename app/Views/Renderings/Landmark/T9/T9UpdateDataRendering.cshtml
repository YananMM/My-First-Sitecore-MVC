@using System.Diagnostics.Eventing.Reader
@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Configuration
@using Sitecore.ContentSearch.Utilities
@using Sitecore.Data.Items
@model RenderingModel
<div class="gd-personal-data">
    <h4>@Html.Sitecore().Field("Personal Title")</h4>
    <p>@Html.Sitecore().Field("Personal Description")</p>
    <div class="row">
        <div class="table-responsive col-sm-6">
            <table>
                <tbody>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", (Item) Factory.GetDatabase("web").GetItem(ItemGuids.TelephoneItem))</th>
                        <td>@Html.Sitecore().Field("Personal Telephone")</td>
                    </tr>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", (Item) Factory.GetDatabase("web").GetItem(ItemGuids.EmailItem))</th>
                        <td><a href="mailto:@Html.Sitecore().Field("Personal Email")">@Html.Sitecore().Field("Personal Email")</a></td>
                    </tr>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", (Item) Factory.GetDatabase("web").GetItem(ItemGuids.AddressItem))</th>
                        <td>@Html.Sitecore().Field("Personal Address")</td>
                    </tr>
                </tbody>
            </table>
        </div>
    </div>
</div>
