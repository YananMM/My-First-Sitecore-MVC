@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@using Sitecore.Links
@using Sitecore.StringExtensions
@model RenderingModel

<div class="container">
        <div class="gd-pagetitle">
            <div class="gd-pagetitle-heading">
                <h2>@Html.Sitecore().Field("Page Title")</h2>
              <a href="@LinkManager.GetItemUrl(Sitecore.Context.Database.GetItem(ItemGuids.MonthlyExclusivePage))" class="gd-link-audio">
                   @Html.Sitecore().Field("Glossary Value",SitecoreItems.SeeAllExclusiveItem) <span class="icomoon-chevron-small-right"></span>
                </a>
            </div>
        </div>

    <div class="gd-content-details visible-xs-block">
        @{
             MultilistField brandField = ((MultilistField)Sitecore.Context.Item.Fields["Brand"]);
                string brandTitle = "";
                Sitecore.Data.ID brand=new ID();
            Item brandItem = null;
                if (brandField != null && brandField.TargetIDs != null && brandField.TargetIDs.Length > 0)
                {
                    brand = brandField.TargetIDs.FirstOrDefault();
                    brandItem = Sitecore.Context.Database.GetItem(brand);
                    brandTitle = Sitecore.Context.Database.GetItem(brand).Fields["Brand Title"].Value;
                }
        }
        @if (brandItem!=null)
        {
            <h5><a href="@Sitecore.Links.LinkManager.GetItemUrl(brandItem)">@brandTitle</a></h5>
        }

        <h3>@Html.Sitecore().Field("Article Headline")</h3>
    </div>
      <div class="gd-exclusive">
	  
      <div class="row">
          <div class="col-sm-6">
              @{
                  var slides = LandmarkHelper.GetItemByTemplate(Sitecore.Context.Item,ItemGuids.SlideObjectTemplate);
              }
@if (slides.Count > 0)
{
            <div id="gd-carousel-mainimage" class="carousel slide gd-carousel-info gd-mainimage gd-mainimage-withdes" data-ride="carousel">
                
                @if (slides.Count > 1)
                {
                    <!-- Indicators -->
                    <ol class="carousel-indicators">
                      @for (int i = 0; i < slides.Count; i++)
    {
        <li data-target="#gd-carousel-mainimage" data-slide-to="@i" @{if (i == 0) { <text>
            class="active"
            </text>            }}></li>
    }
                  </ol>
                }
                  
                  <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                    @{
                        int j = 0;
                        foreach (var item in slides)
                        {
                            <div @{
                                     if (j == 0)
                                     {
                                         <text>
                                             class="item active"
                                         </text>
                                     }
                                     else
                                     {
                                         <text>
                                             class="item"
                                         </text>
                                     }
                                 }>
                                @{
                                    j++;
                                }
                                <img data-src="@Html.Sitecore().ImageFieldSrc("Slide Image", item)">
                                <p class="gd-des-below">
                                    @Html.Sitecore().Field("Slide Title", item)
                                </p>
                            </div>
                        }
                    }
                </div>
                @if (slides.Count > 1)
                {
                    <!-- Controls -->
                  <div class="gd-mainimage-controls">
                      <a class="gd-mainimage-control" href="#gd-carousel-mainimage" role="button" data-slide="prev">
                          <span class="icomoon-thin-arrow-L" aria-hidden="true"></span>
                          <span class="sr-only">Previous</span>
                      </a>
                      <a class="gd-mainimage-control" href="#gd-carousel-mainimage" role="button" data-slide="next">
                          <span class="icomoon-thin-arrow-R" aria-hidden="true"></span>
                          <span class="sr-only">Next</span>
                      </a>
                  </div>
                }
                  
              </div>

}
              
          </div>
      <div class="col-sm-6">
        <div class="gd-content-details">
          <div class="hidden-xs">
          
         @if (brandItem != null)
         {
             <h5><a href="@Sitecore.Links.LinkManager.GetItemUrl(brandItem)">@brandTitle</a></h5>
         }
            <h3>@Html.Sitecore().Field("Article Headline")</h3>
          </div>
            @Html.Sitecore().Field("Article Content")
@{
    var tagsTrees = LandmarkHelper.GetTagsTree();
}
@if (tagsTrees.Count > 0)
{
    <dl class="gd-content-details-tags">
              <dt> <span class="icomoon-price-tag"></span> @Html.Sitecore().Field("Glossary Value", SitecoreItems.TagsItem):</dt> 
              <dd>@Html.Sitecore().Rendering(SitecoreRenderingViewGuids.TagsRenderingViewGuid)</dd>
          </dl>
            <hr>
}
          
@if (brandItem != null)
{
        ShoppingHelper shoppingHelper = new ShoppingHelper();
                    var floor = shoppingHelper.GetShopFloor(brandItem);
    <div class="row">
        <div class="col-sm-7">
            <div class="table-responsive">
                <table>
                    <tbody>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", SitecoreItems.OpenningHoursItem)</th>
                        <td>
                            @Html.Sitecore().Field("Opening Hours", brandItem)
                        </td>
                    </tr>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", SitecoreItems.ContactItem)</th>
                        <td>@Html.Sitecore().Field("Contact", brandItem)</td>
                    </tr>
                    <tr>
                        <th>@Html.Sitecore().Field("Glossary Value", SitecoreItems.WhereItem) </th>
                        <td>
                            @Html.Sitecore().Field("Area"),@floor["Floor Title"],@floor.Parent["Building Title"]<br><a href="#" class="gd-link-map gd-lightbox-link" data-lightsrc="@Html.Sitecore().ImageFieldSrc("Floor Image", floor)" data-lighttitle="@Html.Sitecore().Field("Description")">
                                <span class="icomoon-location2"></span> @Html.Sitecore().Field("Glossary Value", SitecoreItems.FloorPlanItem)
                            </a>
                        </td>
                    </tr>

                    </tbody>
                </table>
            </div>
        </div>

        <div class="col-sm-5 text-center">
            @if (brandItem != null)
            {
                <img data-src="@Html.Sitecore().ImageFieldSrc("Brand Image", brandItem)">
            }
        </div>
    </div>
}
        </div>
        </div>
      </div>
      </div>
    </div>
