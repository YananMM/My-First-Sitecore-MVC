@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@model RenderingModel


<div class="container">
    <div class="gd-artplace">
        <div class="row">
            <div class="col-sm-12 visible-xs-block visible-sm-block">
                <div class="gd-pagetitle ">
                    <div class=" gd-pagetitle-heading">
                        <h1>@Html.Sitecore().Field("Art Piece Name"), @Html.Sitecore().Field("Art Created Time")</h1>
                    </div>
                </div>
            </div>
            <div class="col-md-6 text-center">
                <div class="gd-pagetitle">
                    @{
                        ImageField imageField = Sitecore.Context.Item.Fields["Art Image"];

                        string alt = imageField.Alt;
                    }
                    <img class="gd-lightbox-link" data-lightsrc="https://boredanddangerousblog.files.wordpress.com/2014/06/edgeoftomorrow2.jpg" src="@Html.Sitecore().ImageFieldSrc("Art Image", Sitecore.Context.Item)" alt="@alt">
                </div>
            </div>
            <div class="col-md-6">
                <div class="gd-pagetitle">
                    <div class="hidden-xs  hidden-sm gd-pagetitle-heading">
                        <h1>@Html.Sitecore().Field("Art Piece Name"), @Html.Sitecore().Field("Art Created Time")</h1>
                    </div>

                    <div class="gd-artplace-details row">
                        <div class="col-md-6 gd-artplace-info">
                            ACYLIC AND @Html.Sitecore().Field("Art Type")<br>
                            @Html.Sitecore().Field("Art Size")
                        </div>
                        <div class="col-md-6 text-right">
                            <a href="javascript:;" class="gd-button gd-button-white text-center" data-player="sample.mp3">
                                <span class="icomoon-sound-alt"></span>
                                @Html.Sitecore().Field("Glossary Value", ItemGuids.ListenToCommentaryItem)
                            </a>
                        </div>
                    </div>
                    <div class="gd-artplace-details row">
                        <div class="col-sm-2 gd-artplace-location">@Html.Sitecore().Field("Glossary Value", ItemGuids.LocationItem)</div>
