@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@model RenderingModel
@{
    ArtTourHelper helper = new ArtTourHelper();
    var currentItem = Sitecore.Context.Item;
}

<div class="container">
    <div class="gd-artplace">
        <div class="row">
            <div class="col-sm-12 visible-xs-block">
                <div class="gd-pagetitle ">
                    <div class=" gd-pagetitle-heading">
                        <h2>
                            @Html.Sitecore().Field("Art Title")
                        </h2>
                    </div>
                </div>
            </div>
            <div class="col-sm-6 text-center">
                <div class="gd-pagetitle">
                    @{
                        ImageField imageField = Sitecore.Context.Item.Fields["Art Image"];
                        <a href="javascript:;" class="gd-lightbox-link gd-hover-img" data-lightsrc="@Html.Sitecore().ImageFieldSrc("Art Image", Sitecore.Context.Item)" data-lighttitle="@Sitecore.Context.Item.Fields["Art Title"]">
                            <div class="gd-hover-img-mask"></div>
                            <img src="@Html.Sitecore().ImageFieldSrc("Art Image", Sitecore.Context.Item)" alt="@imageField.Alt">
                        </a>
                    }
                </div>
            </div>
            <div class="col-sm-6">
                <div class="gd-pagetitle">
                    <div class="hidden-xs gd-pagetitle-heading">
                        <h2>@Html.Sitecore().Field("Art Title")</h2>
                    </div>
                    <div class="gd-artplace-details row">
                        <div class="col-sm-12 gd-artplace-info">
                            @Sitecore.Context.Item.Fields["Art Key"].Value.ToUpper()<br>
                            @Html.Sitecore().Field("Art Size")
                        </div>
                        @if (Html.Sitecore().CurrentItem.Language.Name == "zh-HK")
                        {
                            <div class="col-sm-4 text-right">
                                <div>
                                    <a href="javascript:;" class="gd-button gd-button-white text-center" data-player="@Html.Sitecore().FileFieldUrl("Commentary", Sitecore.Context.Item)">
                                        <span class="icomoon-sound-alt"></span>
                                        @Html.Sitecore().Field("Commentary Alt")
                                    </a>
                                </div>
                                <div>
                                    <a href="javascript:;" class="gd-button gd-button-white text-center" data-player="@Html.Sitecore().FileFieldUrl("Commentary Alt", Sitecore.Context.Item)">
                                        <span class="icomoon-sound-alt"></span>
                                        @Html.Sitecore().Field("Commentary Alt")
                                    </a>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="col-sm-4 text-right">
                                <a href="javascript:;" class="gd-button gd-button-white text-center" data-player="@Html.Sitecore().FileFieldUrl("Commentary", Sitecore.Context.Item)">
                                    <span class="icomoon-sound-alt"></span>
                                    @Html.Sitecore().Field("Commentary Alt")
                                </a>
                            </div>
                        }
                    </div>
                    <div class="gd-artplace-details row">
                        <div class="col-sm-3 col-md-2  gd-artplace-location">@Html.Sitecore().Field("Glossary Value", SitecoreItems.LocationItem)</div>
                        @{
                            var floor = helper.GetFloor(Sitecore.Context.Item);
                            if (floor != null)
                            {
                                <div class="col-sm-9 col-md-10 gd-artplace-location-info">
                                    @floor.Fields["Floor Title"] @floor.Parent.Fields["Building Title"]<br>
                                    @{
                                string text = "";
                                var lightBox = Html.Sitecore().Field("Light Box Text");
                                text = lightBox + " " + floor.Fields["Floor Title"] + " of " + floor.Parent.Fields["Building Title"];
                                    }
                                    <a href="javascript:;" class="gd-link-map gd-lightbox-link gd-lightbox-pin" data-pin="@Html.Sitecore().ImageFieldSrc("LocationX", Sitecore.Context.Item),@Html.Sitecore().ImageFieldSrc("LocationY", Sitecore.Context.Item)" data-lightsrc="@Html.Sitecore().ImageFieldSrc("Floor Image", floor)" data-lighttitle="@text">
                                        <span class="icomoon-location2"></span> @Html.Sitecore().Field("Glossary Value", SitecoreItems.FloorPlanItem)
                                    </a>
                                </div>
                            }
                        }
                    </div>
                    @Html.Sitecore().Placeholder("t29-artist")
                </div>

            </div>
        </div>
    </div>
</div>

@Html.Sitecore().Placeholder("t29-also-in")