@using Landmark.Classes
@using Landmark.Helper
@using Sitecore.Data.Fields
@using Sitecore.Data.Items
@model RenderingModel

<div class="gd-artist">
    <a class="gd-artist-control-l" href="#">
        <span class="icomoon-thin-arrow-L"></span>
        <span class="sr-only">Previous</span>
    </a>

    <a class="gd-artist-control-r" href="#">
        <span class="icomoon-thin-arrow-R"></span>
        <span class="sr-only">Next</span>
    </a>
    <div class="container gd-artist-details">
        <div class="row">
            <div class="col-sm-4 col-md-3 text-center">
                <div>
                    <div class="visible-xs-block   gd-mainimage-brief ">
                        <h1>@Html.Sitecore().Field("Artist Name")</h1>
                        <p>@Html.Sitecore().Field("Artist Birthday Label") @Html.Sitecore().Field("Artist Birthday Text")</p>
                    </div>
                    @Html.Sitecore().Field("Artist Photo")

                    <div class="gd-artist-info">@Html.Sitecore().Field("Artist Photo Description")</div>
                </div>
            </div>
            <div class="col-sm-8 col-md-3">
                <div class="gd-mainimage-brief gd-longarticle">
                    <div class="hidden-xs">
                        <h1>@Html.Sitecore().Field("Artist Name")</h1>
                        <p>@Html.Sitecore().Field("Artist Birthday Label") @Html.Sitecore().Field("Artist Birthday Text")</p>
                    </div>
                    @Html.Sitecore().Field("Artist Description")
                    <a href="javascript:;" class="gd-artist-more gd-longarticle-switcher">READ MORE +</a>
                </div>
            </div>
        </div>
    </div>
</div>
