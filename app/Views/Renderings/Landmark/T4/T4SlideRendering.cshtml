@using Landmark.Classes
@using Landmark.Helper
@model RenderingModel
@{
    var slides = LandmarkHelper.GetItemByTemplate(ItemGuids.SlideObjectTemplate);
}
<div id="gd-carousel-mainimage" class="carousel slide gd-carousel-info gd-mainimage" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        @for (int i = 0; i < slides.Count; i++)
        {
            <li data-target="#gd-carousel-mainimage" data-slide-to="@i" @{if (i == 0) { <text>
                class="active"
                </text>            }}></li>
        }
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <div class="carousel-image" data-bgsrc="../files/landmark/images/nowatlm/nowatlm-banner-02.jpg"></div>
        </div>
        <div class="item">
            <div class="carousel-image" data-bgsrc="../files/landmark/images/nowatlm/nowatlm-banner-01.jpg"></div>
        </div>
        <div class="item">
            <div class="carousel-image" data-bgsrc="../files/landmark/images/nowatlm/nowatlm-banner-02.jpg"></div>
        </div>
    </div>
    <!-- Controls -->
    <div class="gd-mainimage-controls">
        <a class="gd-mainimage-control" href="#gd-carousel-mainimage" role="button" data-slide="prev">
            <span class="icomoon-thin-arrow-L" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="gd-mainimage-control" href="#gd-carousel-mainimage" role="button" data-slide="next">
            <span class="icomoon-thin-arrow-R" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>