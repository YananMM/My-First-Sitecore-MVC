@using Landmark.Helper
@using Sitecore.Links
@model RenderingModel
@{
    var currentItem = Sitecore.Context.Item;
    var childPage = currentItem.Children.FirstOrDefault();
    string host = HttpContext.Current.Request.Url.Scheme +
                          Uri.SchemeDelimiter +
                          HttpContext.Current.Request.Url.Host;
    LandmarkHelper.RedirectPermanent(host+LandmarkHelper.TranslateUrl(Sitecore.Links.LinkManager.GetItemUrl(childPage)), 301);
}
